{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 3,
  "name": "ClickAsk WebLLM",
  "version": "0.0.1",
  "description": "ClickAsk WebLLM is a browser shortcut that lets you using a pre-defined LLM (Large Language Model) via WebLLM.",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.side_panel": {
    "default_path": "src/PanelRoute.html"
  },
  "{{firefox}}.sidebar_action": {
    "default_panel": "src/PanelRoute.html"
  },
  "{{chrome}}.permissions": [
    "sidePanel",
    "tabs",
    "storage",
    "contextMenus",
    "activeTab",
    "windows"
  ],
  "{{firefox}}.permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "activeTab",
    "windows"
  ],
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.ts"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  "{{firefox}}.browser_specific_settings": {
    "gecko": {
      "id": "clickask-webllm@example.com"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
